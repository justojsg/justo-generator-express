{
  "runner": {
    "main": "Justo.js",
    "onError": "continue",
    "logger": {
      "minLevel": "info",
      "maxLevel": "fatal"
    }
  },
  "reporter": {
    "type": "coloredConsole",
    "coloredConsole": {
      "theme": {
        "task": {
          "title": {
            "simple": "gray",
            "composite": "cyan"
          },
          "result": {
            "location": "pre",
            "between": ["[ ", " ]"],
            "ok": {
              "text": "OK",
              "color": "green"
            },
            "failed": {
              "text": "ER",
              "color": "red"
            },
            "ignored": {
              "text": "IG",
              "color": "white"
            }
          }
        }
      }
    }
  }
}
